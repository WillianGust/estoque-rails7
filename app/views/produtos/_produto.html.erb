
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tamanho</th>
        <th>Peso</th>
        <th>Quantidade</th>
        <th>Valor</th>
        <th>DDDDDDD</th>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= link_to produto.nome, produto %></td>
          <td><%= produto.tamanho %></td>
          <td><%= produto.peso %></td>
          <td><%= produto.quantidade %></td>
          <td><%= produto.valor %></td>
          <%# <td><%= link_to 'Show', produto_path</td> %>
          <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
          <%# <td><%= link_to 'Destroy', @produto, method: :delete, data: { confirm: 'Are you sure?' }  %>
          <td><%= button_to "Destroy this produto", produto, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>

